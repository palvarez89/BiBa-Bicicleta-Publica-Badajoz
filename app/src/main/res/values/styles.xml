<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/c50</item>
        <item name="colorControlNormal">@color/c50</item>
        <item name="actionBarTheme">@style/Toolbar</item>
    </style>

    <style name="AppThemeDrawer" parent="AppTheme">
        <item name="android:textColorPrimary">@color/c500</item>
    </style>

    <style name="Drawer.base" parent="AppTheme">
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:background">@color/c400</item>
    </style>

    <style name="Drawer" parent="Drawer.base">
        <item name="android:background">@color/c400</item>
    </style>

    <style name="Toolbar.base" parent="AppTheme">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Toolbar" parent="Toolbar.base">
        <item name="android:background">@color/c500</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="AppTheme.EditTextOverflow">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="AlertDialogCustom">
        <item name="android:textColor">@color/c500</item>
        <item name="android:textColorPrimary">@color/blacktrans</item>
    </style>
</resources>
